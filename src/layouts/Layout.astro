---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />

		<meta name="keywords" content="" />

		<meta name="format-detection" content="telephone=no" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>
		<link rel="shortcut icon" href="assets/img/favicon.png" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="assets/css/slick.min.css" />
		<link rel="stylesheet" href="assets/css/bootstrap-grid.css" />
		<link rel="stylesheet" href="assets/css/font-awesome.min.css" />
		<link rel="stylesheet" href="assets/css/style.css" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body id="home">
		<slot />
	</body>
	<script src="/assets/js/jquery-2.2.4.min.js" is:inline></script>
	<script src="/assets/js/slick.min.js" is:inline></script>
	<script src="assets/js/isotope.pkgd.js" is:inline></script>
	<script src="/assets/js/rx-lazy.js" is:inline></script>
	<script src="/assets/js/parallax.min.js" is:inline></script>
	<script src="/assets/js/scripts.js" is:inline></script>
</html>
