	.testimonials-slider2 .slick-dots {
		display: flex;
		align-items: center;
		justify-content: center;
		margin-top: 30px;
	}

	.testimonials-slider2 .slick-dots li {
		cursor: pointer;
		position: relative;
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background-color: #bebebe;
		margin-right: 8px;
		transition: 0.25s ease-in;
	}

	.testimonials-slider2 .slick-dots li:hover,
	.testimonials-slider2 .slick-dots li.slick-active {
		background-color: #f23849;
	}

	.testimonials-slider2 .slick-dots li:last-child {
		margin-right: 0;
	}

	.testimonials-slider2 .slick-dots li button {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		visibility: hidden;
		opacity: 0;
		padding: 0;
		margin: 0;
	}
</style>
